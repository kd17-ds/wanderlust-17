<!-- For Success -->
<% if (typeof success !== "undefined" && success.length) { %>
<div
  class="alert alert-success alert-dismissible fade show col-md-6 col-12 mx-auto mt-2"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>

<!-- For Error -->
<% if (typeof error !== "undefined" && error.length) { %>
<div
  class="alert alert-danger alert-dismissible fade show col-md-6 col-12 mx-auto mt-2"
  role="alert"
>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>
<% } %>
